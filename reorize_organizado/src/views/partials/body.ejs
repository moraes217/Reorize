              </div>
            </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          </div>
        </div>
      </div>
    </div>
  
    <!-- Modal Adicionar Meta-->
    <div class="modal fade btn-custom-opacity" id="add-goal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title text-danger" id="title">Adicionar Meta</h5>
            <button type="button" class="close btn btn-outline-danger" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <!-- Formulario Meta -->
            <div class="container-lg">
              <form action="/target" method="post">
                <div class="form-group p-3">
                  <label for="account">Conta</label>
                  <select name="account" id="account" class="form-control form-select">
                    <% data.data_account.forEach(function(account) {%>
                      <option value="<%= account.id %>"><%= account.nm_account %></option>
                    <% }); %>
                  </select>
                </div>
                <div class="form-group p-3">
                  <label for="category">Categoria</label>
                  <select name="category" id="category" class="form-control form-select">
