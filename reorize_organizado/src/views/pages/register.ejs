<body class="roboto">
  <!-- Video de Fundo -->
  <video autoplay loop muted id="background">
    <source src="public/video/reorize.mp4" type="video/mp4">
    </video>
    <!-- Container de Informações -->
    <div class="vertical-center">
      <div class="container">
        <section class="row h-100">
          <header class="container h-100">
            <div class="d-flex align-items-center justify-content-center h-100">
              <div class="d-flex flex-column">
                <h1 class="righteous text-warning text align-self-center p-2">®eorize</h1>
                <h3 class="lato text-light text align-self-center p-2">A gerência simples em seu computador</h3>
                  <!-- Formulario Cadastro -->
                  <div class="col align-self-center p-5">
                    <form action="/register" method="POST" class="was-validated">
                      <div class="form-group pb-3">
                        <input type="text" name="name" class="form-control transparent-input" minlength="3" maxlength="50" placeholder="Nome" required>
                        <div class="valid-feedback"></div>
                        <div class="invalid-feedback text-light">Digite seu nome de usuário</div>
                      </div>
                      <div class="form-group pb-3 pt-1">
                        <input type="email" name="email" class="form-control transparent-input" placeholder="Email" required>
                        <div class="valid-feedback"></div>
                        <div class="invalid-feedback text-light">Digite um email válido</div>
                      </div>
                      <div class="form-group pt-1">
                        <input type="password" name="password" class="form-control transparent-input" minlength="8" placeholder="Senha" required>
                        <div class="valid-feedback"></div>
                        <div class="invalid-feedback text-light">Mínimo 8 caracteres</div>
                      </div>
                      <div class="col-sm-12 pt-4 text-center">
                        <a href="/" class="text-white text-decoration-none"><button class="btn btn-secondary" type="button" name="button">Voltar</button></a>
                        <button class="btn btn-secondary" type="submit" name="button">Cadastrar</button>
                      </div>
                    </form>
                  </div>

                  <%  if(errors !=="") { %>
                    <% errors.forEach(function(item) { %>
                      <div class="alert-danger text-center"><%- item %></div>
                    <% }); %>
                  <% } %>

              </div>
            </div>
          </header>
        </section>
      </div>
    </div>
</body>
